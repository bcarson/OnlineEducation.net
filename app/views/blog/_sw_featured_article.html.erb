<div class="module">
	<div class="header">
		<h4>Featured Article</h4>
	</div>
	<div class="content top">
		<ul class="article_list">
			<li>
    <% @featuredblog = Blog.find(:first, :order => 'created_at DESC') %>
  	<% if File.exists?("public/images/blogs/" + @featuredblog.url_string + "/featured.jpg") %>
      <a href="<%= @featuredblog.url -%>"><img width="380px" height="239px" src="<%= @featuredblog.featured_pic_url -%>" alt="" id="featured-article-image" />
    <% end %>
      <a href="<%= @featuredblog.url -%>"><%= @featuredblog.title -%></a>
    </li>
	</div>
	<div class="footer"></div>
</div>