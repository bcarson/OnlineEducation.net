<div class="module">
	<div class="header">
		<h4>Archives</h4>
	</div>
	<div class="content">
    <ul class="link_list">
    	<li class="year"><a style="color:black" href="/2010">2010</a></li>
      <% @months = [] %>
      <% for blog in Blog.find(:all, :conditions => ['created_at like ?', '2010' + "%"]) %>
    	  <% @months << [blog.created_at.strftime("%m"), blog.created_at.strftime("%B")] %>
      <% end %>

			<% for month in @months.uniq %>
			  <li><a href="/2010/<%= month[0] -%>"><%= month[1] -%></a></li>
			<% end %>
    </ul>
    <ul class="link_list">
    	<li class="year"><a style="color:black" href="/2009">2009</a></li>
      <% @months = [] %>
      <% for blog in Blog.find(:all, :conditions => ['created_at like ?', '2009' + "%"]) %>
    	  <% @months << [blog.created_at.strftime("%m"), blog.created_at.strftime("%B")] %>
      <% end %>

			<% for month in @months.uniq %>
			  <li><a href="/2009/<%= month[0] -%>"><%= month[1] -%></a></li>
			<% end %>
    </ul>
	</div>
	<div class="footer"></div>
</div>